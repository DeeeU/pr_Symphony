{% extends 'base.html.twig' %}

{% block title %}メモ一覧{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>メモ一覧</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">メモ検索</h5>
                <form method="GET" action="{{ path('memo_index') }}">
                    <div class="row">
                        <div class="col-md-4 mb-4">
                            <label for="keyword">キーワード</label>
                            <input type="text" class="form-control" id="keyword" name="keyword"
                                   value="{{ keyword }}" placeholder="タイトルまたは内容で検索">
                        </div>
                        <div class="col-md-4 mb-4">
                            <label for="start_date">開始日</label>
                            <input type="date" class="form-control" id="start_date" name="start_date"
                                   value="{{ start_date }}">
                        </div>
                        <div class="col-md-4 mb-4">
                            <label for="end_date">終了日</label>
                            <input type="date" class="form-control" id="end_date" name="end_date"
                                   value="{{ end_date }}">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary">検索</button>
                            <a href="{{ path('memo_index') }}" class="btn btn-secondary">クリア</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <a href="{{ path('memo_new') }}" class="btn btn-primary mb-3">新規メモ作成</a>

        {% if keyword or start_date or end_date %}
            <div class="alert alert-info">
                検索結果: {{ pagination|length }} 件
                {% if keyword %}
                    <span class="badge badge-primary">キーワード: {{ keyword }}</span>
                {% endif %}
                {% if start_date %}
                    <span class="badge badge-secondary">開始日: {{ start_date }}</span>
                {% endif %}
                {% if end_date %}
                    <span class="badge badge-secondary">終了日: {{ end_date }}</span>
                {% endif %}
            </div>
        {% else %}
          <div class="alert alert-info">
            {{ pagination.getTotalItemCount }} 件中 {{ pagination|length }} 件表示
          </div>
        {% endif %}

        {% if pagination|length > 0 %}
            <div class="row">
                {% for memo in pagination %}
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ memo.title }}</h5>
                                <p class="card-text">
                                    {% if memo.content|length > 50 %}
                                        {{ memo.content|slice(0, 50) }}...
                                    {% else %}
                                        {{ memo.content }}
                                    {% endif %}
                                </p>
                                <p class="card-category">
                                  {% if memo.category %}
                                  <span class="badge" style="background-color: {{ memo.category.color }}">
                                    {{ memo.category.name }}
                                  </span>
                                {% endif %}
                                </p>
                                <p class="text-muted small">
                                    作成日: {{ memo.createdAt|date('Y-m-d H:i') }}
                                </p>
                                <a href="{{ path('memo_show', {'id': memo.id}) }}" class="btn btn-sm btn-primary">詳細</a>
                                <a href="{{ path('memo_edit', {'id': memo.id}) }}" class="btn btn-sm btn-warning">編集</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="navigation">
              {{ knp_pagination_render(pagination) }}
            </div>
        {% else %}
            <div class="alert alert-info">
                {% if keyword or start_date or end_date %}
                    検索条件に一致するメモが見つかりませんでした。
                {% else %}
                    まだメモがありません。<a href="{{ path('memo_new') }}">最初のメモを作成</a>してみましょう！
                {% endif %}
            </div>
        {% endif %}
    </div>
{% endblock %}
