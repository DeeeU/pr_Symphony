{% extends 'base.html.twig' %}

{% block title %}{{ memo.title }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ memo.title }}</h1>

        <div class="card">
            <div class="card-body">
                <p>{{ memo.content|nl2br }}</p>
                <hr>
                <p class="text-muted small">
                  作成日: {{ memo.createdAt|date('Y-m-d H-i-s') }}
                </p>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('memo_index') }}" class="btn btn-secondary">一覧に戻る</a>
        </div>
    </div>
{% endblock %}
