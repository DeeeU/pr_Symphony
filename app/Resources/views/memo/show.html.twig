{% extends 'base.html.twig' %}

{% block title %}{{ memo.title }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ memo.title }}</h1>

        <div class="card">
            <div class="card-body">
                <p>{{ memo.content|nl2br }}</p>
                <hr>
                <p class="text-muted small">
                  作成日: {{ memo.createdAt|date('Y-m-d H-i-s') }}
                </p>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('memo_index') }}" class="btn btn-secondary">一覧に戻る</a>
            <a href="{{ path('memo_edit', {'id': memo.id}) }}" class="btn btn-warning">編集</a>

            <form method="POST" action="{{ path('memo_delete', {'id': memo.id}) }}" style="display: inline;" onsubmit="return confirm('本当に削除しますか？')">
              <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ memo.id) }}">
              <button type="submit" class="btn btn-danger">削除</button>
            </form>
        </div>
    </div>
{% endblock %}
