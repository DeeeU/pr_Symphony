{% extends 'base.html.twig' %}

{% block title %}メモ編集 - {{ memo.title }}{% endblock %}

{% block body %}
  <div class="container mt-4">
    <h1>メモ編集</h1>

    {# フラッシュメッセージ表示 #}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <form action="{{ path('memo_update', {'id': memo.id}) }}" method="POST">
      <div class="form-group mb-3">
        <label for="title">タイトル</label>
        <input type="text" class="form-control" id="title" name="title" value="{{ memo.title }}" required>
      </div>
      <div class="form-group mb-3">
        <label for="content">内容</label>
        <textarea class="form-control" id="content" name="content" rows="5" required>{{ memo.content }}</textarea>
      </div>
      <button type="submit" class="btn btn-primary">更新</button>
      <a href="{{ path('memo_show', {'id': memo.id}) }}" class="btn btn-secondary">キャンセル</a>
    </form>
  </div>
{% endblock %}
