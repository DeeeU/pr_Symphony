{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - カテゴリ詳細{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .category-header {
            background: linear-gradient(135deg, {{ category.color }}15 0%, {{ category.color }}05 100%);
            border-left: 4px solid {{ category.color }};
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        .category-color {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 15px;
            border: 3px solid #fff;
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
        }
        .info-card {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }
        .memo-list-item {
            border-left: 3px solid {{ category.color }};
            background: white;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 0 8px 8px 0;
            transition: all 0.2s ease;
        }
        .memo-list-item:hover {
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            transform: translateX(2px);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <!-- フラッシュメッセージ -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle mr-2"></i>{{ message }}
                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                </button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle mr-2"></i>{{ message }}
                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                </button>
            </div>
        {% endfor %}

        <!-- カテゴリヘッダー -->
        <div class="category-header">
            <div class="d-flex align-items-center mb-3">
                <span class="category-color" style="background-color: {{ category.color }}"></span>
                <div>
                    <h1 class="mb-1">{{ category.name }}</h1>
                    <small class="text-muted">
                        <i class="fas fa-calendar-alt mr-1"></i>
                        作成日: {{ category.createdAt|date('Y年m月d日 H:i') }}
                    </small>
                </div>
            </div>

            {% if category.description %}
                <p class="mb-0 text-muted">{{ category.description }}</p>
            {% else %}
                <p class="mb-0 text-muted font-italic">説明は登録されていません</p>
            {% endif %}
        </div>

        <!-- カテゴリ情報 -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="info-card">
                    <h5><i class="fas fa-sticky-note text-primary mr-2"></i>関連メモ数</h5>
                    <h2 class="text-primary">{{ category.memoCount }}件</h2>
                    {% if category.memoCount > 0 %}
                        <small class="text-muted">このカテゴリに分類されているメモがあります</small>
                    {% else %}
                        <small class="text-muted">まだメモは登録されていません</small>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="info-card">
                    <h5><i class="fas fa-palette text-primary mr-2"></i>カテゴリカラー</h5>
                    <div class="d-flex align-items-center">
                        <span class="category-color mr-3" style="background-color: {{ category.color }}; width: 60px; height: 60px;"></span>
                        <div>
                            <code>{{ category.color }}</code>
                            <br>
                            <small class="text-muted">HEXカラーコード</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 関連メモ一覧 -->
        {% if hasMemos %}
            <h4><i class="fas fa-list mr-2"></i>このカテゴリのメモ一覧</h4>
            {% for memo in memos %}
                <div class="memo-list-item">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="mb-1">
                                <a href="{{ path('memo_show', {'id': memo.id}) }}" class="text-decoration-none">
                                    {{ memo.title }}
                                </a>
                            </h6>
                            <p class="mb-1 text-muted">
                                {% if memo.content|length > 100 %}
                                    {{ memo.content|slice(0, 100) }}...
                                {% else %}
                                    {{ memo.content }}
                                {% endif %}
                            </p>
                            <small class="text-muted">
                                <i class="fas fa-clock mr-1"></i>{{ memo.createdAt|date('Y/m/d H:i') }}
                            </small>
                        </div>
                        <div class="ml-3">
                            <a href="{{ path('memo_show', {'id': memo.id}) }}" class="btn btn-sm btn-outline-primary">
                              <i class="fas fa-eye mr-1"></i>詳細
                            </a>
                        </div>
                        <div class="ml-3">
                          <a href="{{ path('memo_edit', {'id': memo.id}) }}" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-edit mr-1"></i>編集
                          </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="text-center py-5">
                <i class="fas fa-sticky-note fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">このカテゴリにはまだメモがありません</h5>
                <p class="text-muted">メモを作成する際にこのカテゴリを選択してください</p>
                <a href="{{ path('memo_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus mr-1"></i>新規メモ作成
                </a>
            </div>
        {% endif %}

        <!-- アクションボタン -->
        <div class="mt-4 pt-4 border-top">
            <div class="row">
                <div class="col-md-6">
                    <a href="{{ path('category_index') }}" class="btn btn-secondary mr-2">
                        <i class="fas fa-list mr-1"></i>カテゴリ一覧に戻る
                    </a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit mr-1"></i>編集
                    </a>
                </div>
                <div class="col-md-6 text-md-right">
                    {% if category.memoCount == 0 %}
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">
                            <i class="fas fa-trash mr-1"></i>削除
                        </button>
                    {% else %}
                        <span class="btn btn-secondary disabled" title="関連するメモがあるため削除できません">
                            <i class="fas fa-lock mr-1"></i>削除不可
                        </span>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- 削除確認モーダル -->
        {% if category.memoCount == 0 %}
            <div class="modal fade" id="deleteModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header bg-danger text-white">
                            <h5 class="modal-title">
                                <i class="fas fa-exclamation-triangle mr-2"></i>削除確認
                            </h5>
                            <button type="button" class="close text-white" data-dismiss="modal">
                                <span>&times;</span>
                            </button>
                        </div>
                        <div class="modal-body text-center">
                            <span class="category-color mb-3 d-inline-block"
                                  style="background-color: {{ category.color }}; width: 60px; height: 60px;"></span>
                            <h6>カテゴリ「<strong>{{ category.name }}</strong>」を削除しますか？</h6>
                            <p class="text-muted">この操作は取り消せません。</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                キャンセル
                            </button>
                            <form method="POST" action="{{ path('category_delete', {'id': category.id}) }}" style="display: inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash mr-1"></i>削除する
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
